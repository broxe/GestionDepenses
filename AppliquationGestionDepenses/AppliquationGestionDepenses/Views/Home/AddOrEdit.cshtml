@model AppliquationGestionDepenses.Models.TDepenses
@{
    Layout = null;
}

<!DOCTYPE html>

@using (Html.BeginForm("AddOrEditFct", "Home", FormMethod.Post, new { onsubmit = "return SubmitFormData(this)"} ))
{
    @Html.HiddenFor(model => model.IdDepense)
<div class="form-group">
    <label class = "control-label">Date :</label>
    @Html.EditorFor(model => model.dateDepesse, new { htmlAttributes = new { @class = "form-control" } })
    
</div>
<div class="form-group">
    <label class="control-label">Prix Depense :</label>
    @Html.EditorFor(model => model.prixDepense, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.prixDepense)
</div>
<div class="form-group">
    <label class="control-label">Type Depense :</label>
    <div class="input-group">
        @Html.EditorFor(model => model.nomDepense, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    @Html.ValidationMessageFor(model => model.nomDepense)
</div>
 <div class="form-group">
     <input type="submit" value="Valider" class="btn btn-primary" />
     <input type="reset" value="Vider" class="btn btn-warning" />
 </div>   
}
